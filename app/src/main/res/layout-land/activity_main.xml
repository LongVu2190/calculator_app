<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#DF000000"
        android:id="@+id/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#d1e5e0"
            android:id="@+id/solution_area"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_rotate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/rotate"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:textSize="16sp"
                android:contentDescription="@string/rotate"
                app:backgroundTint="@color/black"/>

        <TextView
                android:id="@+id/solution_text"
                android:background="#d1e5e0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textAlignment="textEnd"
                android:textColor="#959595"
                android:textSize="26sp"
                tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttons_layout"
            android:text="@string/_0"
            android:background="#d1e5e0"
            android:textSize="46sp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            android:id="@+id/result_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/solution_area"
            tools:ignore="RtlSymmetry" />

    <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/background_button_color"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center|bottom"
        >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_button_color"
                android:gravity="center">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_abs"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/abs"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_modulo"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/modulo"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="#353535"
                    android:text="@string/_c"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"

                    />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_interval"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_leftbracket"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_close_interval"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/__rightbracket"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide_operator"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_slash"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sin"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/sin"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pow"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/pow"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_7"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_7" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_8"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_8" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_9"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_9" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_star"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:id="@+id/btn_multiply_operator" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cos"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/cos"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_log"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/ln"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_4"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_4" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_5"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_5" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_6"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_6" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_plus"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:id="@+id/btn_plus_operator" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tan"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/tan"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sqrt"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/square_root"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_1"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_1" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_2"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_2" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_3"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_3" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_minus"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:id="@+id/btn_minus_operator" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/last_row"
                android:gravity="center">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_e"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/e"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pi"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/pi"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/ac"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_all_clear"
                    android:backgroundTint="#353535" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_0" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_dot"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"
                    android:id="@+id/btn_dot"
                    android:backgroundTint="@color/operator_button_color" />

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:layout_margin="4dp"
                    android:text="@string/_equal"
                    android:textColor="@color/white"
                    app:cornerRadius="60dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:id="@+id/btn_result" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>