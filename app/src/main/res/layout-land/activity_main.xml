<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#DF000000"
        android:id="@+id/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#d1e5e0"
            android:id="@+id/solution_area">

        <TextView
                android:id="@+id/solution_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="0dp"
                android:textAlignment="textEnd"
                android:textColor="#959595"
                android:textSize="25sp"
                android:layout_marginRight="20dp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttons_layout"
            android:layout_below="@+id/solution_area"
            android:background="#d1e5e0"
            android:id="@+id/result_area">

        <TextView
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/_0"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:paddingRight="15dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background_button_color"
            android:orientation="vertical"
            android:paddingStart="3dp"
            android:paddingEnd="3dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_c"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_interval"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_leftbracket"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_close_interval"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/__rightbracket"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide_operator"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_slash"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_7"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_7"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_8"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_8"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_9"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_9"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_multiply_operator"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_star"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_4"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_4"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_5"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_5"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_6"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_6"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_plus_operator"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_plus"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_1"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_1"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_2"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_2"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_3"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_3"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_minus_operator"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_minus"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_all_clear"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/ac"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_0"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:text="@string/_0"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_dot"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_dot"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_result"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/operator_button_color"
                    android:text="@string/_equal"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:cornerRadius="50dp"
                    android:padding="0dp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>